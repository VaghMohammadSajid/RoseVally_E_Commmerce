    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductServlet</servlet-name>
        <url-pattern>/ProductServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>testProductServlet</servlet-name>
        <url-pattern>/testProductServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WhishlistServlet</servlet-name>
        <url-pattern>/WhishlistServlet</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
</web-app>
